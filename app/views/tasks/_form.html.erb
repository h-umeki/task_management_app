<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :task_name, style: "display: block" %>
    <%= form.text_field :task_name, required: true %>
  </div>

  <div>
    <%= form.label :task_comment, style: "display: block" %>
    <%= form.text_area :task_comment, required: true %>
  </div>

  <div>
    <%= form.label :detail, style: "display: block" %>
    <%= form.text_area :detail, required: true %>
  </div>

  <div>
    <%= form.label :expiry_date, style: "display: block" %>
    <%= form.datetime_field :expiry_date %>
  </div>

  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.number_field :priority %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Task.statuses.keys.to_a, selected: Task.statuses.invert[:status_before_type_cast], style: "width: 180px;"%>
  </div>

  <div>
    <%= form.label :label, style: "display: block" %>
    <%= form.text_field :label %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
